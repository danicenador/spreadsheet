public void createFormulaTree(){
        String formula=getContent().substring(1);

        LinkedList<String> values = new LinkedList<>();
        LinkedList<String> operators = new LinkedList<>();
        String value = "";
        for (char ch:formula.toCharArray()){
            if (Character.isDigit(ch)){
                value+=String.valueOf(ch);
            }else if(Character.isLetter(ch)){
                value+=String.valueOf(ch);
            }else{
                values.add(value);
                operators.add(String.valueOf(ch));
                value = "";
            }
        }
        values.add(value);

        Operator tree = new Operator();
        tree.setOperator(operators.pollLast());
        FormulaTree[] leaves = new FormulaTree[2];
        value = values.pollLast();
        if (IsCoordinates(value)){
            leaves[0]= new CellElement(value);
        }else if (IsDouble(value)){
            leaves[0]= new NumberElement(Double.parseDouble(value));
        }
        value = values.pollLast();
        if (IsCoordinates(value)){
            leaves[1]= new CellElement(value);
        }else if (IsDouble(value)){
            leaves[1]= new NumberElement(Double.parseDouble(value));
        }
        tree.setLeaves(leaves);

        this.tree=tree;
    }